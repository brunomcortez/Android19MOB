<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.psyapp">

    <application
        android:name=".PsyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.psyapp.ui.splash.SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.psyapp.ui.signup.SignupActivity" />
        <activity android:name="br.com.psyapp.ui.login.LoginActivity"
            android:theme="@style/FullScreen"/>
        <activity
            android:name="br.com.psyapp.MainActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
